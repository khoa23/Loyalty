@page
@model LoyaltyWebApp.Pages.Admin.Customers.IndexModel
@{
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Danh sách khách hàng</h1>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã CIF</th>
                        <th>Tên khách hàng</th>
                        <th>Tên đăng nhập</th>
                        <th>Số điện thoại</th>
                        <th>Điểm hiện tại</th>
                        <th>Cập nhật lần cuối</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Customers != null && Model.Customers.Count > 0)
                    {
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-info">@customer.CifNumber</span>
                                </td>
                                <td>@customer.FullName</td>
                                <td>@customer.Username</td>
                                <td>@(string.IsNullOrEmpty(customer.PhoneNumber) ? "N/A" : customer.PhoneNumber)</td>
                                <td>
                                    <span class="badge bg-success">@customer.CurrentPoints.ToString("N0")</span>
                                </td>
                                <td>@customer.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addPointsModal"
                                            onclick="setCustomerForPoints(@customer.CustomerId, '@customer.FullName', @customer.CurrentPoints)">
                                        <i class="fas fa-plus"></i> Cộng điểm
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                Không có khách hàng nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Cộng điểm -->
<div class="modal fade" id="addPointsModal" tabindex="-1" aria-labelledby="addPointsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPointsModalLabel">Cộng điểm khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="customerName" class="form-label">Khách hàng</label>
                    <input type="text" class="form-control" id="customerName" readonly>
                </div>
                <div class="mb-3">
                    <label for="currentBalance" class="form-label">Số điểm hiện tại</label>
                    <input type="text" class="form-control" id="currentBalance" readonly>
                </div>
                <div class="mb-3">
                    <label for="pointsToAdd" class="form-label">Số điểm cộng thêm <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="pointsToAdd" min="1" required>
                </div>
                <div class="mb-3">
                    <label for="reason" class="form-label">Lý do cộng điểm</label>
                    <textarea class="form-control" id="reason" rows="3" placeholder="Nhập lý do cộng điểm..."></textarea>
                </div>
                <div id="addPointsError" class="alert alert-danger d-none" role="alert"></div>
                <div id="addPointsSuccess" class="alert alert-success d-none" role="alert"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmAddPointsBtn">Cộng điểm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedCustomerId = 0;

        function setCustomerForPoints(customerId, fullName, currentPoints) {
            selectedCustomerId = customerId;
            document.getElementById('customerName').value = fullName;
            document.getElementById('currentBalance').value = currentPoints.toString();
            document.getElementById('pointsToAdd').value = '';
            document.getElementById('reason').value = '';
            document.getElementById('addPointsError').classList.add('d-none');
            document.getElementById('addPointsSuccess').classList.add('d-none');
        }

        document.getElementById('confirmAddPointsBtn').addEventListener('click', async function () {
            const pointsToAdd = parseInt(document.getElementById('pointsToAdd').value);
            const reason = document.getElementById('reason').value;

            if (!pointsToAdd || pointsToAdd <= 0) {
                showAddPointsError('Vui lòng nhập số điểm hợp lệ');
                return;
            }

            try {
                const response = await fetch('/api/customer/add-points', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        customerId: selectedCustomerId,
                        points: pointsToAdd,
                        reason: reason
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    showAddPointsSuccess('Cộng điểm thành công! Số điểm mới: ' + result.newBalance.toString());
                    
                    // Reload page after 2 seconds
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                } else {
                    const result = await response.json();
                    showAddPointsError(result.message || 'Lỗi khi cộng điểm');
                }
            } catch (error) {
                console.error('Error:', error);
                showAddPointsError('Lỗi khi kết nối với máy chủ');
            }
        });

        function showAddPointsError(message) {
            const errorDiv = document.getElementById('addPointsError');
            errorDiv.textContent = message;
            errorDiv.classList.remove('d-none');
        }

        function showAddPointsSuccess(message) {
            const successDiv = document.getElementById('addPointsSuccess');
            successDiv.textContent = message;
            successDiv.classList.remove('d-none');
        }
    </script>
}
