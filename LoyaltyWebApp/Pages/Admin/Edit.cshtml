@page
@model LoyaltyWebApp.Pages.Admin.EditModel
@{
    ViewData["Title"] = "Sửa quà";
}

<div class="container mt-4">
    <h2>Sửa quà</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Reward != null)
    {
        <form method="post" class="mt-4">
            <input type="hidden" name="rewardId" value="@Model.Reward.Reward_Id" />
            
            <div class="mb-3">
                <label for="rewardName" class="form-label">Tên quà <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="rewardName" name="rewardName" value="@Model.Reward.Reward_Name" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <textarea class="form-control" id="description" name="description" rows="3">@Model.Reward.Description</textarea>
            </div>
            <div class="mb-3">
                <label for="pointsCost" class="form-label">Điểm đổi <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="pointsCost" name="pointsCost" value="@Model.Reward.Points_Cost" required min="1">
            </div>
            <div class="mb-3">
                <label for="stockQuantity" class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="stockQuantity" name="stockQuantity" value="@Model.Reward.Stock_Quantity" required min="0">
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" value="true" @(Model.Reward.Is_Active == true ? "checked" : "")>
                    <label class="form-check-label" for="isActive">
                        Kích hoạt
                    </label>
                </div>
            </div>
            <input type="hidden" name="lastUpdatedBy" value="@Model.UserId" />
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="/Admin" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning">Không tìm thấy quà</div>
        <a href="/Admin" class="btn btn-secondary">Quay lại</a>
    }
</div>

