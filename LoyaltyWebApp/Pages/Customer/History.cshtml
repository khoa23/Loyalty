@page
@model LoyaltyWebApp.Pages.Customer.HistoryModel
@{
    ViewData["Title"] = "Lịch sử đổi quà";
}

<div class="container-fluid mt-4">
    <h2>Lịch sử đổi quà</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.History != null && Model.History.Any())
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã giao dịch</th>
                        <th>Tên quà</th>
                        <th>Số lượng</th>
                        <th>Điểm đã dùng</th>
                        <th>Ngày đổi</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.History)
                    {
                        <tr>
                            <td>@item.Transaction_Id</td>
                            <td>@item.Reward_Name</td>
                            <td>@item.Quantity_Redeemed</td>
                            <td>@item.Points_Spent điểm</td>
                            <td>@item.Redemption_Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.Transaction_Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@item.Transaction_Status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Bạn chưa có lịch sử đổi quà nào.</div>
    }
</div>

