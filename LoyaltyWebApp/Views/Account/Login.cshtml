@model LoyaltyWebApp.Models.LoginRequest
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Đăng nhập</h2>
                    
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form method="post" asp-action="Login" asp-controller="Account">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>
                    </form>
                    
                    <div class="text-center">
                        <p class="mb-0">Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

