@model LoyaltyWebApp.Models.RegisterRequest
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Đăng ký</h2>
                    
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Account">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="Username" class="form-control" required minlength="3" maxlength="50">
                            <small class="form-text text-muted">Từ 3 đến 50 ký tự</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="Password" type="password" class="form-control" required minlength="6">
                            <small class="form-text text-muted">Tối thiểu 6 ký tự</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" required maxlength="100">
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" maxlength="15">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">Đăng ký</button>
                    </form>
                    
                    <div class="text-center">
                        <p class="mb-0">Đã có tài khoản? <a asp-action="Login" asp-controller="Account">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

