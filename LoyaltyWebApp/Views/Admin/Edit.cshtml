@model LoyaltyWebApp.Models.RewardItem
@{
    ViewData["Title"] = "Sửa quà";
}

<div class="container mt-4">
    <h2>Sửa quà</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null)
    {
        <form method="post" enctype="multipart/form-data" class="mt-4" asp-action="Edit" asp-controller="Admin">
            <input type="hidden" name="Reward_Id" value="@Model.Reward_Id" />
            <input type="hidden" name="Image_Url" value="@Model.Image_Url" />
            
            <div class="mb-3">
                <label for="rewardName" class="form-label">Tên quà <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="rewardName" name="Reward_Name" value="@Model.Reward_Name" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <textarea class="form-control" id="description" name="Description" rows="3">@Model.Description</textarea>
            </div>
            <div class="mb-3">
                <label for="pointsCost" class="form-label">Điểm đổi <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="pointsCost" name="Points_Cost" value="@Model.Points_Cost" required min="1">
            </div>
            <div class="mb-3">
                <label for="stockQuantity" class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="stockQuantity" name="Stock_Quantity" value="@Model.Stock_Quantity" required min="0">
            </div>
            <div class="mb-3">
                <label for="imageFile" class="form-label">Ảnh quà (để trống nếu không muốn thay đổi)</label>
                <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*">
                @if (!string.IsNullOrEmpty(Model.Image_Url))
                {
                    <div class="mt-2">
                        <small class="text-muted">Ảnh hiện tại:</small><br>
                        <img src="@Model.Image_Url" alt="@Model.Reward_Name" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="isActive" name="Is_Active" value="true" @(Model.Is_Active == true ? "checked" : "")>
                    <label class="form-check-label" for="isActive">
                        Kích hoạt
                    </label>
                </div>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning">Không tìm thấy quà</div>
        <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Quay lại</a>
    }
</div>

