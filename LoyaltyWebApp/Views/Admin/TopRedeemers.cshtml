@model List<LoyaltyWebApp.Models.CustomerStatisticViewModel>
@{
    ViewData["Title"] = "Top 5 Khách Hàng Đổi Quà";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-trophy text-warning me-2"></i>Top 5 Khách Hàng Đổi Quà Nhiều Nhất</h1>
            <p class="text-muted">Thống kê dựa trên tổng số lượng quà đã đổi</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th scope="col" class="ps-4">Thứ hạng</th>
                            <th scope="col">Mã CIF</th>
                            <th scope="col">Họ và Tên</th>
                            <th scope="col" class="text-center">Số quà đã đổi</th>
                            <th scope="col" class="text-center">Tổng điểm đã chi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            int rank = 1;
                            @foreach (var stat in Model)
                            {
                                <tr>
                                    <td class="ps-4 align-middle">
                                        @if (rank == 1)
                                        {
                                            <span class="badge rounded-pill bg-warning text-dark px-3 py-2"><i class="fas fa-crown me-1"></i> #1</span>
                                        }
                                        else if (rank == 2)
                                        {
                                            <span class="badge rounded-pill bg-secondary text-white px-3 py-2">#2</span>
                                        }
                                        else if (rank == 3)
                                        {
                                            <span class="badge rounded-pill bg-secondary text-white px-3 py-2" style="background-color: #CD7F32 !important;">#3</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold text-muted ps-2">#@rank</span>
                                        }
                                    </td>
                                    <td class="align-middle"><span class="badge bg-light text-dark border">@stat.CifNumber</span></td>
                                    <td class="align-middle fw-bold text-primary">@stat.FullName</td>
                                    <td class="align-middle text-center">
                                        <span class="badge bg-success fs-6">@stat.TotalGiftsRedeemed.ToString("N0")</span>
                                    </td>
                                    <td class="align-middle text-center">@stat.TotalPointsSpent.ToString("N0") điểm</td>
                                </tr>
                                rank++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="mb-0">Chưa có dữ liệu đổi quà</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
