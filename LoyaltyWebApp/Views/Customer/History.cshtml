@model List<LoyaltyWebApp.Models.HistoryItem>
@{
    ViewData["Title"] = "Lịch sử đổi quà";
}

<div class="container-fluid mt-4">
    <h2>Lịch sử đổi quà</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tên quà</th>
                        <th>Số lượng</th>
                        <th>Điểm đã dùng</th>
                        <th>Ngày đổi</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Reward_Name</td>
                            <td>@item.Quantity_Redeemed</td>
                            <td>@item.Points_Spent điểm</td>
                            <td>@item.Redemption_Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.Transaction_Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@item.Transaction_Status</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#barcodeModal"
                                        onclick="showBarcode('@item.Transaction_Id', '@item.Reward_Name')">
                                    <i class="bi bi-qr-code"></i> Xem mã quà
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Bạn chưa có lịch sử đổi quà nào.</div>
    }
</div>

<!-- Modal Xem mã barcode -->
<div class="modal fade" id="barcodeModal" tabindex="-1" aria-labelledby="barcodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="barcodeModalLabel">Mã quà tặng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="mb-3">
                    <label class="form-label"><strong>Tên quà:</strong></label>
                    <p id="rewardNameDisplay"></p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Mã giao dịch:</strong></label>
                    <p id="transactionIdDisplay" class="font-monospace fw-bold"></p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Mã vạch sản phẩm:</strong></label>
                    <svg id="barcodeContainer" class="mx-auto d-block" style="max-width: 100%;"></svg>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script>
        let currentTransactionId = '';

        function showBarcode(transactionId, rewardName) {
            currentTransactionId = transactionId;
            document.getElementById('rewardNameDisplay').textContent = rewardName;
            document.getElementById('transactionIdDisplay').textContent = transactionId;
            
            // Tạo barcode từ mã giao dịch
            JsBarcode("#barcodeContainer", transactionId, {
                format: "CODE128",
                width: 2,
                height: 50,
                displayValue: true
            });
        }
    </script>
}

